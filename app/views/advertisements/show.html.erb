<p id="notice"><%= notice %></p>

<h1>
  <%= @advertisement.title %>
</h1>

<p>
  <strong>Posted by:</strong>
  <%= JSON.parse(@advertisement.user.webfinger)["subject"] %>
  <small><%= time_ago_in_words @advertisement.created_at %> ago</small>
</p>

<p>
  <%= @advertisement.body %>
</p>


<% if user_signed_in? %>
  <%= link_to 'Edit', edit_advertisement_path(@advertisement) %> |
<% end %>
<%= link_to 'Back', advertisements_path %>
