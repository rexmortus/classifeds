<div class="grid grid-x grid-padding-y grid-padding-x">
  <div class="cell">
    <dl>
      <dt>Username</dt>
      <dd><%= @user.username %></dd>
      <dt>Email</dt>
      <dd><%= @user.email %></dd>
      <dt>ActivityPub Actor</dt>
      <dd><%= @user.actor_id %></dd>
      <dt>Public Key</dt>
      <dd><textarea disabled rows="9"><%= @user.pubkey %></textarea></dd>
    </dl>
    <%= simple_form_for @user, :url => profile_edit_path, :method => :patch do |f| %>
      <%= f.error_notification %>
      <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

      <div class="form-inputs">
        <%= f.input :location,
          required: true,
          input_html: {
            autocomplete: "new-password",
            id: "address-input",
            placeholder: "Location",
            value: @user.location.present? ? @user.location : current_user.location
          } %>
      </div>

      <%= f.input :locale,
        label: t(:locale),
        collection: I18n.available_locales,
        selected: @user.locale
      %>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
    <% end %>

  </div>
</div>
