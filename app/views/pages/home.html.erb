<div class="grid-x grid-padding-x grid-padding-y" id="algoliasearch">
  <div class="cell small-12 medium-5 large-3">
    <div>
      <div class="grid grid-x">
        <div class="cell small-12 medium-12 large-12">
          <fieldset class="fieldset" style="margin-top: 0px; margin-bottom: 0px; padding-bottom: 0px;">
            <div id='map' style='width: 100%; height: 300px;'></div><br>
            <legend id="user_location" data-geocode="<%= user_signed_in? ? current_user.geocode : Rails.application.config.classifeds_default_geocode %>">
              <a href="/profile/edit" data-tooltip class="bottom" tabindex="2" title="Click to update location">
                <i class="fi-marker"></i> <%= user_signed_in? ? current_user.location : Rails.application.config.classifeds_default_location %>
              </a>
            </legend>
            <div class="grid grid-x grid-padding-x" style="margin-bottom: 0px">
              <div class="cell small-6">
                <div class="slider" id="radius-slider" data-slider data-initial-start="25" data-start="1" data-end="500" data-step="5">
                  <span class="slider-handle"  data-slider-handle role="slider" tabindex="1" aria-controls="sliderOutput2"></span>
                  <span class="slider-fill" data-slider-fill></span>
                </div>
              </div>
              <div class="cell small-6">
                <div class="input-group">
                  <input class="input-group-field" type="number" id="sliderOutput2">
                  <span class="input-group-label">km</span>
                </div>
              </div>
            </div>
          </fieldset>
        </div>
      </div>
    </div>
    <fieldset class="fieldset" style="margin-bottom: 0px;">
      <legend><i class="fi-filter"></i> Type</legend>
      <div class="search-filters-menu" id="for_filter"></div>
    </fieldset>
    <div class="search-filters-menu" id="category-list"></div>
  </div>
  <div class="cell small-12 medium-7 large-9" style="padding-top: 26px">
      <div class="callout alert" style="padding-bottom: 0px">
        <div id="searchbox"></div>
      </div>
      <p class="filter-labels">
        <span class="label success">Within <strong><span id="distance-label">25</span>km</strong> of <%= current_user.location if user_signed_in? %></span>
        <span id="current-refinements"></span>
        <span id="clear-refinements"></span>
      </p>
      <div id="advert-hits"></div>
      <br>
      <div id="pagination"></div>
  </div>
</div>
