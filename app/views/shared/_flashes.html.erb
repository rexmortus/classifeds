<!-- Notices -->
<% if notice %>
<div class="callout alert toast" data-closable>
  <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
    <span aria-hidden="true">&times;</span>
  </button>
  <p><strong>Notice:</strong></p>
  <ul>
      <li><%= notice %></li>
  </ul>
</div>
<% end %>

<% if alert %>
  <div class="callout alert toast" data-closable>
    <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
      <span aria-hidden="true">&times;</span>
    </button>
    <p><strong>Alert:</strong></p>
    <ul>
        <li><%= notice %></li>
    </ul>
  </div>
<% end %>

<!-- Render validation errors as toasts -->
<% if defined?(errors) %>
  <div class="callout alert toast" data-closable>
    <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
      <span aria-hidden="true">&times;</span>
    </button>
    <p><strong>Validation errors:</strong></p>
    <ul>
      <% errors.messages.values.each do |error| %>
        <li><%= error.first %></li>
      <% end %>
    </ul>
  </div>
<% end %>
