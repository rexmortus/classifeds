<!-- Notices -->
<% if notice %>
<div class="callout alert toast" data-closable>
  <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
    <span aria-hidden="true">&times;</span>
  </button>
  <p><strong>💁🏼‍♂️ <%= t(:notice) %></strong></p>
  <p><%= notice %></p>
</div>
<% end %>

<% if alert %>
  <div class="callout alert toast" data-closable>
    <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
      <span aria-hidden="true">&times;</span>
    </button>
    <p><strong>🚨 Alert</strong></p>
    <p><%= alert %></p>
  </div>
<% end %>

<!-- Render validation errors as toasts -->
<% if defined?(errors) %>
  <div class="callout alert toast" data-closable>
    <button class="close-button" aria-label="Dismiss alert" type="button" data-close>
      <span aria-hidden="true">&times;</span>
    </button>
    <p><strong>⚠️ <%= t :validation_errors %></strong></p>
    <ul>
      <% errors.messages.values.each do |error| %>
        <li><%= error.first %></li>
      <% end %>
    </ul>
  </div>
<% end %>
